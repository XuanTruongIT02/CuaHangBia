@model IEnumerable<CuaHangBiaOnline_62131086.Models.Chitietdonhang_62131086>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết đơn hàng</h2>

<table class="table">
    <tr>
        <th>
            SẢN PHẨM
